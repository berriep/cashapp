# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=True
FLASK_ENV=development

# Shared Database Configuration (Users, Authentication, Audit Logs, Sessions)
# This database contains resources used by ALL modules:
# - bai_monitor_users table (user accounts)
# - Authentication/session data
# - Audit logs
# - Any other shared tables
SHARED_DB_HOST=your-shared-db-host
SHARED_DB_PORT=5432
SHARED_DB_NAME=rpa_data
SHARED_DB_USER=cashapp_user
SHARED_DB_PASSWORD=your-shared-password

# BAI Database Configuration (Production Database - Read Only Access Recommended)
# This database is used by the BAI Monitor module for real-time transaction monitoring
BAI_DB_HOST=your-production-db-host
BAI_DB_PORT=5432
BAI_DB_NAME=rpa_data
BAI_DB_USER=bai_readonly_user
BAI_DB_PASSWORD=your-bai-password

# Recon Database Configuration (ACCEPT Database - Safe Testing Environment)
# This database is used by the Reconciliation module for:
# - Worldline payment data imports and testing
# - Reconciliation matching development
# - Safe testing WITHOUT affecting production data
# IMPORTANT: Uses ACCEPT environment, NOT production!
RECON_DB_HOST=your-accept-db-host
RECON_DB_PORT=5432
RECON_DB_NAME=recon_accept
RECON_DB_USER=recon_user
RECON_DB_PASSWORD=your-recon-password

# Session Configuration
SESSION_COOKIE_SECURE=False

# Application Settings
ITEMS_PER_PAGE=50
MAX_TRANSACTION_DISPLAY=10000
MAX_TRANSACTION_DISPLAY=10000
